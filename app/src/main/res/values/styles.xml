<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Layout styles-->
    <style name="fragmentContentLayout">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Text styles-->
    <style name="textTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textExtraLarge</item>
    </style>

    <style name="textInfo">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--Image styles-->
    <style name="image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="imageChannelLogo" parent="image">
        <item name="android:layout_width">@dimen/layoutSmall</item>
        <item name="android:layout_height">@dimen/layoutSmall</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--Button styles-->
    <style name="button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:layout_margin">@dimen/layoutMargin</item>
    </style>

    <style name="buttonNormal" parent="button">
        <item name="android:layout_width">@dimen/layoutNormal</item>
        <item name="android:layout_height">@dimen/layoutNormal</item>
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="buttonLarge" parent="button">
        <item name="android:layout_width">@dimen/layoutLarge</item>
        <item name="android:layout_height">@dimen/layoutLarge</item>
        <item name="android:textSize">@dimen/textExtraExtraLarge</item>
    </style>

    <style name="imageButton" parent="image">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">@dimen/layoutMargin</item>
    </style>

    <style name="imageButtonSmall" parent="imageButton">
        <item name="android:layout_width">@dimen/layoutSmall</item>
        <item name="android:layout_height">@dimen/layoutSmall</item>
    </style>

    <style name="imageButtonNormal" parent="imageButton">
        <item name="android:layout_width">@dimen/layoutNormal</item>
        <item name="android:layout_height">@dimen/layoutNormal</item>
    </style>

    <style name="imageButtonLarge" parent="imageButton">
        <item name="android:layout_width">@dimen/layoutLarge</item>
        <item name="android:layout_height">@dimen/layoutLarge</item>
    </style>

    <style name="imageButtonExtraLarge" parent="imageButton">
        <item name="android:layout_width">@dimen/layoutExtraLarge</item>
        <item name="android:layout_height">@dimen/layoutExtraLarge</item>
    </style>

    <!--Widget styles-->
    <style name="seekbar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
        <item name="android:layout_marginTop">-20dp</item>
        <item name="android:layout_marginBottom">-20dp</item>
    </style>

    <style name="scrollview">
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="listview" parent="scrollview">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">5dp</item>
    </style>

    <style name="spinner" parent="@style/Base.Widget.AppCompat.Spinner"></style>

</resources>