<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="room_number"
        android:numeric="integer"
        android:title="@string/settings_room_number" />
    <EditTextPreference
        android:key="sgh_address"
        android:title="@string/settings_sgh_address" />
    <EditTextPreference
        android:key="sgh_port"
        android:numeric="integer"
        android:summary="@string/settings_automatic_if_empty"
        android:title="@string/settings_sgh_port" />
    <EditTextPreference
        android:key="pic_address"
        android:summary="@string/settings_automatic_if_empty"
        android:title="@string/settings_pic_address" />
    <EditTextPreference
        android:key="m3s_address"
        android:title="@string/settings_m3s_address" />
    <CheckBoxPreference
        android:key="start_on_boot"
        android:title="@string/settings_start_on_boot" />
    <CheckBoxPreference
        android:key="reboot_allowed"
        android:title="@string/settings_reboot_allowed" />
    <Preference android:title="@string/lights_title">
        <intent android:action="bei.m3c.activities.LightPreferencesActivity" />
    </Preference>
    <CheckBoxPreference
        android:key="show_record_scene_controls"
        android:title="@string/settings_show_record_scene_controls" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="show_ac_controls"
        android:title="@string/settings_show_ac_controls" />
    <EditTextPreference
        android:defaultValue="50"
        android:key="message_volume_percentage"
        android:numeric="integer"
        android:title="@string/settings_message_volume_percentage" />
    <EditTextPreference
        android:defaultValue="50"
        android:key="intro_volume_percentage"
        android:numeric="integer"
        android:title="@string/settings_intro_volume_percentage" />
    <EditTextPreference
        android:key="tv_remote_code"
        android:numeric="integer"
        android:title="@string/settings_tv_remote_code" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_video_controls"
        android:title="@string/settings_show_video_controls" />
    <EditTextPreference
        android:key="kodi_address"
        android:title="@string/settings_kodi_address" />
    <EditTextPreference
        android:key="kodi_port"
        android:numeric="integer"
        android:summary="@string/settings_automatic_if_empty"
        android:title="@string/settings_kodi_port" />
    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:defaultValue="@color/default_accent_color"
        android:key="theme_color"
        android:title="@string/settings_theme_color" />
</PreferenceScreen>